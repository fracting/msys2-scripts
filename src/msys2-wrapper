#!/bin/bash

set -e
#set -x

. /etc/msys2-env

command=$*

export MSYSTEM=MSYS
export WINEDEBUG=fixme-all

if test -d ${MSYS_ROOT}${HOME}
then
    cd ${MSYS_ROOT}${HOME}
fi

SCRIPT_FILE=typescript.$$
EXIT_CODE=exit_code.$$

# emulate travis_wait
(for i in {0..60}; do echo timestamp:$i; sleep 60; done) &
ALIVE_PING=$!

(wineconsole $MSYS_ROOT/usr/bin/script.exe ${SCRIPT_FILE} -q -f -e -c "/usr/bin/bash.exe -l -e -c \"$command\"" || echo $? > ${EXIT_CODE})&
echo \$ $command
tail -F ${SCRIPT_FILE} --pid=$! 2> /dev/null || return 0

rm -f ${SCRIPT_FILE}

kill -9 ${ALIVE_PING}

if test -f ${EXIT_CODE}
then
    # clean up
    rm -f ${EXIT_CODE}
    exit $(cat ${EXIT_CODE})
fi

echo msys2-wrapper executed \`$command\` successfully!
